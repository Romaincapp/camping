    <script>
        // Animation au scroll
        gsap.registerPlugin(ScrollTrigger);
        
        gsap.from('.grid-cols-1 > div', {
            scrollTrigger: {
                trigger: '.grid-cols-1',
                start: 'top center',
            },
            y: 50,
            opacity: 0,
            duration: 1,
            stagger: 0.2
        });

        // Gestion du formulaire
        document.getElementById('reservationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Ici, vous pourrez ajouter le code pour envoyer les données du formulaire
            alert('Merci pour votre demande de réservation ! Nous vous contacterons rapidement avec un devis.');
